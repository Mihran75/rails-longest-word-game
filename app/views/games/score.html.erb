<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card shadow">
      <div class="card-header bg-dark text-white text-center">
        <h1 class="display-4 mb-0">ðŸ“Š FINAL SCORE</h1>
      </div>

      <div class="card-body">
        <div class="row text-center">
          <div class="col-md-6 mb-3">
            <div class="result-item">
              <h5 class="text-muted">Your words :</h5>
              <span class="display-5 fw-bold text-primary"><%= @word %></span>
            </div>
          </div>

          <div class="col-md-6 mb-3">
            <div class="result-item">
              <h5 class="text-muted"> Time taken:</h5>
              <span class="display-6 fw-bold text-info"><%= @time_taken.round(2) %>s</span>
            </div>
          </div>
        </div>

        <div class="text-center mb-4">
          <div class="letters-grid d-flex justify-content-center flex-wrap gap-2 my-3">
            <% @letters.each do |letter| %>
              <span class="badge bg-light text-dark fs-5 p-2"><%= letter %></span>
            <% end %>
          </div>
        </div>

        <div class="alert <%= @result[:valid] ? 'alert-success' : 'alert-danger' %> text-center">
          <h4><%= @result[:message] %></h4>
        </div>

        <div class="row text-center">
          <div class="col-md-6 mb-3">
            <div class="score-display">
              <h5 class="text-muted">Score of this game:</h5>
              <span class="display-4 fw-bold <%= @score > 0 ? 'text-success' : 'text-danger' %>">
                <%= @score %> points
              </span>
            </div>
          </div>

          <div class="col-md-6 mb-3">
            <div class="total-score-display">
              <h5 class="text-muted">Score total :</h5>
              <span class="display-4 fw-bold text-warning">
                <%= @total_score %> points
              </span>
            </div>
          </div>
        </div>

        <div class="text-center mt-4">
          <%= link_to "NEW GAME", new_path, class: "btn btn-primary btn-lg px-5" %>
          <%= link_to "Reset to zÃ©ro", root_path + "?reset=true",
              class: "btn btn-outline-secondary ms-2",
              data: {
                confirm: "Are you sure you want to reset the score? ?"
              } %>
        </div>
      </div>
    </div>
  </div>
</div>
